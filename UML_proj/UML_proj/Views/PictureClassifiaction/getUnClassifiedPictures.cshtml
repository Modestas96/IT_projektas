@model UML_proj.ViewModels.UnclassifiedPicutresModel

@{
    ViewBag.Title = "getUnClassifiedPictures";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Unclassified Pictures</h2>

@using (Html.BeginForm("ClassifyPictures", "PictureClassifiaction"))
{
    <table class="table">
        <tr>
            <th>
               Upload Date
            </th>

            <th>
                Picture URL
            </th>

            <th>
                Picture Class
            </th>
            <th>
                Classifier id
            </th>
        </tr>

        @for (int i = 0; i < Model.pictures.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.pictures[i].upload_date)
                    @Html.HiddenFor(model => model.pictures[i].upload_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.pictures[i].picutre_url)
                    @Html.HiddenFor(model => model.pictures[i].picutre_url)
                </td>
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(modelItem => modelItem.pictures[i].picture_class, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.pictures[i].fk_Search_parametersid_Search_parameters)
                    @Html.HiddenFor(model => model.pictures[i].fk_Search_parametersid_Search_parameters)
                </td>
                @Html.HiddenFor(model => model.pictures[i].id_Unclassified_pictures)
            </tr>
        }
    </table>

    <div class="col-md-offset-0 col-md-10">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
    <br/>
}
